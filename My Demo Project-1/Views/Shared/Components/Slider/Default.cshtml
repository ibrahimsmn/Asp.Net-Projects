@model List<NewsVM>
<section class="hero">
    <div class="container">
        <div class="hero__slider owl-carousel">
@foreach (var item in Model)
{
   
                <div class="hero__items set-bg" data-setbg="img/sidebar/@item.ImageURLL">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="hero__text">
                                <h2 style="text-shadow: -1px 0 black, 0 1px black, 1px 0 black, 0 -1px black;">@item.SliderTitle</h2>
                                <a asp-action="index" asp-controller="news" asp-route-title="@Url.FriendlyUrl(item.Title)" asp-route-id="@item.ID"><span>Read More</span> <i class="fa fa-angle-right"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
}
        </div>
    </div>
</section>
