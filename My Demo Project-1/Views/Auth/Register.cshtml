@model SignUpViewModel
@section signupscripts{
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
<section class="normal-breadcrumb set-bg" data-setbg="/img/normal-breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="normal__breadcrumb__text">
                    <h2>Sign Up</h2>
                    <p>Welcome to the official Anime blog.</p>
                </div>
            </div>
        </div>
    </div>
</section>
<section class="signup spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login__form">
                    <h3>Sign Up</h3>
                    <form asp-action="register" asp-controller="auth" method="post">
                        <span asp-validation-for="Mail" style="color:white"></span>
                        <div class="input__item">
                            <span class="icon_mail"></span>
                            <input type="text" placeholder="Email address" asp-for="Mail">
                            
                        </div>
                        <span asp-validation-for="Name" style="color:white"></span>
                        <div class="input__item">
                            <input type="text" placeholder="User Name" asp-for="Name">
                            <span class="icon_profile"></span>
                        </div>
                        <span asp-validation-for="Password" style="color:white"></span>
                        <div class="input__item">
                           
                            <input type="password" placeholder="Password" asp-for="Password">
                            <span class="icon_lock"></span>
                        </div>
                        <span asp-validation-for="PasswordAgain" style="color:white"></span>
                        <div class="input__item">
                            
                            <input type="password" placeholder="Password Again" asp-for="PasswordAgain">
                            <span class="icon_lock"></span>
                        </div>
                        <button type="submit" class="site-btn">Kayıt Ol</button>
                    </form>
                    <div asp-validation-summary="ModelOnly" style="color:white"> </div>
                    <h5>Already have an account? <a asp-action="index" asp-controller="auth">Log In!</a></h5>
                </div>
            </div>
        </div>
    </div>
</section>