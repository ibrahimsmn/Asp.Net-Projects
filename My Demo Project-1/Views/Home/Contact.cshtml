@model Contact
@section signupscripts{
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
    <section class="normal-breadcrumb set-bg" data-setbg="/img/normal-breadcrumb.jpg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="normal__breadcrumb__text">
                        <h2>Contact</h2>
                    </div>
                </div>
            </div>
        </div>
    </section>
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="login__form">
                        <h3>Contact</h3>
                        <form asp-action="contact" asp-controller="home" method="post">
                            <span asp-validation-for="Name" style="color:white"></span>
                            <div class="form-outline">
                                <input type="text" placeholder="Name" class="form-control" asp-for="Name" id="textAreaExample1" rows="3"></input>
                            </div>
                            <br />
                            <span asp-validation-for="Message" style="color:white"></span>
                            <div class="form-outline">
                                <textarea placeholder="Message" asp-for="Message" class="form-control" id="textAreaExample1" rows="10"></textarea>
                            </div>
                            <button type="submit" class="site-btn">Send Message</button>
                        </form>
                        <div asp-validation-summary="ModelOnly" style="color:white"> </div>
                    </div>
                </div>
            </div>
        </div>
    