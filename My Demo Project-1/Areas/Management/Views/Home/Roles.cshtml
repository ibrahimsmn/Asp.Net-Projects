@model List<AppUserRole>
<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        
        
    </tr>
    @foreach (var role in Model)
    {
        <tr>
           <td>@role.Id</td>
           <td>@role.Name</td>
            <td><a asp-action="DeleteRole" asp-controller="home" asp-area="management" asp-route-id="@role.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>

<a asp-action="addrole" asp-controller="home" asp-area="management" class="btn btn-primary">Add Role</a>